if(document.getElementById('new_comment')){
  document.getElementById('new_comment').remove();
};

var comment = document.getElementById("comment-" + <%= @comment.id %>);
comment.insertAdjacentHTML('beforeend', "<%= j render(partial: 'form', locals: { comment: @comment }) %>");

var toolbarOptions = [
  ['bold', 'italic', 'underline', 'strike'],        // toggled buttons
  ['blockquote', 'code-block'],

  [{ 'header': 1 }, { 'header': 2 }],               // custom button values
  [{ 'list': 'ordered'}, { 'list': 'bullet' }],
  [{ 'script': 'sub'}, { 'script': 'super' }],      // superscript/subscript

  [{ 'align': [] }],

  ['clean']                                         // remove formatting button
];

var editorEl = document.getElementById('editor-' + <%= @comment.id %>);

if(editorEl) {
  var editor = new Quill('#editor-' + <%= @comment.id %>, {
    modules: { 
      toolbar: toolbarOptions
    },
    theme: 'snow'
  });

  var formData = editorEl.parentElement.querySelector('#form-data');

  editor.on('text-change', function() {
    var justHtml = editor.root.innerHTML;
    formData.innerHTML = justHtml;
  });

  editor.root.innerHTML = formData.value;
}